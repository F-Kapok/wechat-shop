<wxs src="../../wxs/price.wxs" module="p" />
<view class="container">
    <image class="title" src="{{theme.title_img}}" />
    <scroll-view scroll-x class="scroll-view">
        <view class="inner">
            <block wx:for="{{spuList}}" wx:key="index">
                <view class="spu-container">
                    <image class="spu-img" src="{{item.img}}" />
                    <text class="spu-text">
                        {{item.title.length>=8?s.substring(item.title,0,7)+'...':item.title}}
                    </text>
                    <l-price l-unit-class="price-unit" l-value-class="price-value" unit="ï¿¥" value="{{p.mainPrice(item.price,item.discountPrice).price}}" />
                </view>
            </block>
        </view>
    </scroll-view>
</view>
